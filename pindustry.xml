<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7" method="upgrade">
	<name>Aniews</name>
	<author>Diogo Jesus</author>
	<creationDate>Novembro 2013</creationDate>
	<copyright>(C) 2013 Aniews</copyright>
	<license>Comercial</license>
	<authorEmail>diogo.jesus@webeffect.pt</authorEmail>
	<authorUrl>http://www.aniews.webeffect.pt</authorUrl>
	<version>1.0.0</version>
	<description>Aniews Description</description>


	<files folder="site">
		<folder>models</folder>
		<folder>views</folder>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>pindustry.php</filename>
	</files>
	<administration>
		<menu img="class:newsfeeds-cat">COM_ANIEWS</menu>
		<submenu>
			<menu link="option=com_pindustry&amp;view=companies" view="companies" >COM_ANIME</menu>
			<menu link="option=com_pindustry&amp;view=businessareas" view="businessareas" >COM_MANGA</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>pindustry.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_pindustry.ini</language>
			<language tag="en-GB">language/en-GB.com_pindustry.sys.ini</language>
			<language tag="pt-PT">language/pt-PT.com_pindustry.ini</language>
			<language tag="pt-PT">language/pt-PT.com_pindustry.sys.ini</language>
		</languages>
	</administration>
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="Portugal Industry Update Site">http://localhost/pindustry/administrator/components/com_pindustry/sql/updates/pindustry-update.xml</server>
	</updateservers>
</extension>

